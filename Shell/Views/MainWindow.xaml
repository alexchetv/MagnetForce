<catel:Window x:Class="Shell.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:ViewModels="clr-namespace:Shell.ViewModels"
              xmlns:Views="clr-namespace:Shell.Views"
              xmlns:catel="http://catel.codeplex.com"
              Width="640"
              Height="400"
              FontSize="16"
              ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="button"
                Width="165"
                Margin="10,0,0,7"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Command="{Binding AddMagnet}"
                Content="Add magnet"/>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Magnets}">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Views:MagnetControl DataContext="{Binding}" />
                        <Line Height="1" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</catel:Window>
