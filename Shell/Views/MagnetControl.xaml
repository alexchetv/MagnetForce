<catel:UserControl x:Class="Shell.Views.MagnetControl"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:Views="clr-namespace:Shell.Views"
                   xmlns:catel="http://catel.codeplex.com">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="0" IsChecked="{Binding Included}"/>
        <TextBox Grid.Column="1" Text="{Binding Name}" />
        <Label Grid.Column="2" Content="{Binding Filename}"/>
        <Button x:Name="button"
                Grid.Column="3"
                Content="Remove"
                Command="{Binding RemoveMagnet}"/>
    </Grid>

</catel:UserControl>
